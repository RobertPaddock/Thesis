issn = {10897674},
journal = {Physics of Plasmas},
number = {5},
pages = {52701},
title = {{High-resolution modeling of indirectly driven high-convergence layered inertial confinement fusion capsule implosions}},
url = {https://doi.org/10.1063/1.4981222},
volume = {24},
year = {2017}
}
@article{Pak2020,
