issn = {10897674},
journal = {Physics of Plasmas},
number = {7},
pages = {072704},
title = {{Theory of alpha heating in inertial fusion: Alpha-heating metrics and the onset of the burning-plasma regime}},
url = {https://doi.org/10.1063/1.5030337},
volume = {25},
year = {2018}
}
