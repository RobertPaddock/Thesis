file = {:C$\backslash$:/Users/paddock/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Johnson, Adrian, Anderson - 2020 - Impact of stalk on directly driven inertial confinement fusion implosions COLLECTIONS(2).pdf:pdf},
